{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "MCP Apps server with interactive UI support",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "npm run build:apps && npm run build:server",
    "build:apps": "npm run build:weather && npm run build:calculator && npm run build:map && npm run build:threejs && npm run build:pdf && npm run build:shadertoy && npm run build:sheet-music && npm run build:wiki && npm run build:budget && npm run build:system-monitor && npm run build:transcript && npm run build:cohort-heatmap && npm run build:scenario-modeler && npm run build:customer-segmentation",
    "build:weather": "APP_NAME=weather vite build",
    "build:calculator": "APP_NAME=calculator vite build",
    "build:map": "APP_NAME=map vite build",
    "build:threejs": "APP_NAME=threejs vite build",
    "build:pdf": "APP_NAME=pdf vite build",
    "build:shadertoy": "APP_NAME=shadertoy vite build",
    "build:sheet-music": "APP_NAME=sheet-music vite build",
    "build:wiki": "APP_NAME=wiki vite build",
    "build:budget": "APP_NAME=budget vite build",
    "build:system-monitor": "APP_NAME=system-monitor vite build",
    "build:transcript": "APP_NAME=transcript vite build",
    "build:cohort-heatmap": "APP_NAME=cohort-heatmap vite build",
    "build:scenario-modeler": "APP_NAME=scenario-modeler vite build",
    "build:customer-segmentation": "APP_NAME=customer-segmentation vite build",
    "build:server": "tsc",
    "legacy": "node index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^4.3.6",
    "three": "^0.160.0",
    "pdfjs-dist": "^4.0.0",
    "abcjs": "^6.2.0",
    "cheerio": "^1.0.0",
    "chart.js": "^4.4.0",
    "systeminformation": "^5.21.0",
    "force-graph": "^1.43.0"
  },
  "devDependencies": {
    "@types/args": "^5.0.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-singlefile": "^0.13.5",
    "@types/three": "^0.160.0",
    "@types/dom-speech-recognition": "^0.0.1"
  }

{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "MCP Apps server with interactive UI support",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "npm run build:apps && npm run build:server",
    "build:apps": "npm run build:weather && npm run build:calculator",
    "build:weather": "set APP_NAME=weather&& vite build",
    "build:calculator": "set APP_NAME=calculator&& vite build",
    "build:server": "tsc",
    "legacy": "node index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-singlefile": "^0.13.5"
  }
}
